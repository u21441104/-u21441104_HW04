
@{
    ViewBag.Title = "Create";
}

<head>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css"/>
</head>

<body>

    @{
        if (IsPost)
        {
            var field01 = Request["numID"];
            var field02 = Request["txtPassword"];
            var tempData = field01.ToString() + "," + field02.ToString() + ",:";

            var dataFile = Server.MapPath("~/App_Data/Logins.txt");
            File.AppendAllText(dataFile, tempData);

        }
    }

    <h2>@ViewBag.Hello</h2>

    <div class="container">
        <div class="row">
            <div class="col">
                <div style="position:absolute;" class="divCent">
                    <table class="divCent" style="position: relative; right: 100%;">
                        <form id="form1" method="post">
                            @using (Html.BeginForm("Index", "CreateProfile", FormMethod.Post))
                            {
                                <tr>
                                    <td> <label>Enter ID Number:</label> </td>
                                </tr>
                                <tr>
                                    <td> <input type="text" id="numID" class="rounded" name="numID" /> </td>
                                </tr>
                                <tr>
                                    <td> <label>Create Password:</label> </td>
                                </tr>
                                <tr>
                                    <td> <input type="password" id="txtPassword" class="rounded" name="txtPassword" /> </td>
                                </tr>
                                <tr>
                                    <td> <input type="submit" id="btnSubmit" value="Create" class="rounded" style="background-color:cornflowerblue; color:white; margin-top:30px" /> </td>
                                </tr>
                            }
                            </form>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>